.container
  = flash_message
  %br
  .row-fluid
    / Information Boxes: Users Registered
    
    
    %a.in-lancamento.span3.well.infobox{:href => lancamentos_path }
      %i.icon-6x.icon-tags
      .pull-right.text-right
        Lançamentos
        %br
        %b.huge= @totais[0]
        %br
        %span.caps.muted Mensal
    / / Information Boxes: Users Registered
    / Information Boxes: Active Users
    %a.in-receita.span3.well.infobox{:href => receitas_lancamentos_path}
      %i.icon-6x.icon-arrow-up
      .pull-right.text-right
        Receita
        %br
        %b.huge= @totais[1].real.real_contabil
        %br
        %span.caps.muted= "+ " + @totais[4].real.real_contabil + " HOJE"
    / / Information Boxes: Active Users
    / Information Boxes: Images
    %a.in-despesa.span3.well.infobox{:href => despesas_lancamentos_path}
      %i.icon-6x.icon-arrow-down
      .pull-right.text-right
        Despesa
        %br
        %b.huge= @totais[2].real.real_contabil
        %br
        %span.caps.muted= "- " + @totais[5].real.real_contabil + " HOJE"
    / / Information Boxes: Images
    / Information Boxes: Applications
    %a.in-saldo.span3.well.infobox{:href => lancamentos_path}
      %i.icon-6x.icon-bar-chart
      .pull-right.text-right
        Saldo
        %br
        %b.huge= @totais[3].real.real_contabil
        %br
        %span.caps.muted= @totais[6].real.real_contabil + " HOJE"
    / / Information Boxes: Applications
  / / Information Boxes
  / Site Traffic and Pie
  .row-fluid
    / Site Traffic: Box
    .span12
      / Site Traffic: Top Bar
      .top-bar{:style => "padding-left: 0px;"}
        %ul.tab-container
          %li.active
            %a{:href => "#tab-traffic"}
              %i.icon-bar-chart
              Relatório Mensal

      .well
        .tab-content
          #tab-traffic.tab-pane.active
            .progress.progress-mini
              .bar{:style => "width: #{@percentual}%;"}
            .alert.alert-info
              %button.close{"data-dismiss" => "alert", :type => "button"} ×
              %i.icon-bolt
              %b Relatório:  
              Gastos Mensal.
            .chart(style='min-height: 200px; margin: 10px 0; width: 100%')
              - if @chart
                = high_chart("relatorio1", @chart)


          /#tab-server.tab-pane
          /  .progress.progress-danger.progress-mini
          /    .bar{:style => "width: 98%;"}
          /  .alert.alert-error
          /    %button.close{"data-dismiss" => "alert", :type => "button"} ×
          /    %i.icon-bolt
          /    %b Huge Traffic
          /    Your server has nearly exceeded the bandwidth limits.
          /  .graph.realtimechart{:style => "padding: 0px;"}
          /    %canvas.flot-base{:height => "240", :style => "width: 100px; height: 240px;", :width => "100"}
          /    %canvas.flot-overlay{:height => "240", :style => "width: 100px; height: 240px; position: absolute; left: 0px; top: 0px;", :width => "100"}
      / / Site Traffic: Content
    / / Site Traffic: Box
    / Pie: Box
    .span4
      / Pie: Top Bar
      .top-bar
        %h3
          %i.icon-money
          Earnings
        %div
          %a.top-bar-minimize{"data-original-title" => "Minimize", :href => "#", :rel => "tooltip", :title => ""}
            %i.icon-resize-small
      / / Pie: Top Bar
      / Pie: Content
      .well
        .alert
          %button.close{"data-dismiss" => "alert", :type => "button"} ×
          %i.icon-star
          %b Income Update
          Your income has gone up by 74% the last week.
        .pie.pie1{:style => "padding: 0px;"}
          %canvas.flot-base{:height => "240", :style => "width: 330px; height: 240px;", :width => "330"}
          %canvas.flot-overlay{:height => "240", :style => "width: 330px; height: 240px; position: absolute; left: 0px; top: 0px;", :width => "330"}
          .legend
            %div{:style => "position: absolute; width: 62px; height: 60px; top: 5px; right: 5px; background-color: transparent; opacity: 0.85;"}             
              %table{:style => "position:absolute;top:5px;right:5px;;font-size:smaller;color:#545454"}
                %tbody
                  %tr
                    %td.legendColorBox
                      %div{:style => "border:1px solid #ccc;padding:1px"}
                        %div{:style => "width:4px;height:0;border:5px solid rgb(136,187,200);overflow:hidden"}
                    %td.legendLabel Expenses
                  %tr
                    %td.legendColorBox
                      %div{:style => "border:1px solid #ccc;padding:1px"}
                        %div{:style => "width:4px;height:0;border:5px solid rgb(235,129,92);overflow:hidden"}
                    %td.legendLabel Sales
                  %tr
                    %td.legendColorBox
                      %div{:style => "border:1px solid #ccc;padding:1px"}
                        %div{:style => "width:4px;height:0;border:5px solid rgb(127,193,141);overflow:hidden"}
                    %td.legendLabel Bonuses
