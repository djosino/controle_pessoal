        / / Site Traffic: Content
        / Pie: Top Bar
    .span4
      .top-bar
        %h3
          %i.icon-money
          Earnings
      / / Pie: Top Bar
      / Pie: Content
      .tab-content
        #tab-traffic.tab-pane.active
          .chart(style='min-height: 200px; margin: 0px; width: 100%')
            .alert.alert-info
              %button.close{"data-dismiss" => "alert", :type => "button"} ×
              %i.icon-bolt
              %b Relatório:
              Gastos por Categoria
            - if @chart
              = high_chart("relatorio2", @chart_pizza) do |c|
                = raw "options.tooltip.formatter = function() {return '<b>'+ this.point.name +'</b>: '+ 100*this.y +' %';}"
                = raw "options.plotOptions.pie.dataLabels.formatter = function() { if (this.y > 5) return this.point.name; }"




