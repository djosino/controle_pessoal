= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-signin form-horizontal" }) do |f|
  .top-bar
    %h3
      %i.icon-leaf
      Controle
      %b Pessoal
  .well.no-padding
    - if alert
      .alert.alert-error
        %a.close{"data-dismiss" => "alert"} ×
        %i.icon.icon-warning-sign
        %b Erro:
        = alert
    - if notice
      .alert.alert
        %a.close{"data-dismiss" => "alert"} ×
        %i.icon.icon-warning-sign
        %b Atenção:
        = notice

    .control-group
      %label.control-label
        %i.icon-user>
      .controls
        = f.email_field :email, :autofocus => true, :placeholder => "Usuário", :style => "width:89%"
    .control-group
      %label.control-label
        %i.icon-key>
      .controls
        = f.password_field :password, :placeholder => "Senha", :style => "width:86%"
    .padding
      = f.submit "Entrar", :class => "btn btn-primary"
      = render "users/shared/links" 
      
