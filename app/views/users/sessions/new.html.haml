%section.section-wrapper.posts-w
  .container
    .row
      .span12
        .row
          .span6
            .white-card.extra-padding
              = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| 
                .row
                  .span5
                    %legend JÃ¡ sou cadastrado
                    - if alert and /realizar/.match(alert).nil?
                      .alert.alert-error
                        = alert
                    - if notice
                      .alert.alert-warning
                        = notice 
                    .span3
                      .control-group
                        = f.label :email , "Seu e-mail"
                        = f.email_field :email, :autofocus => true , :class => "span3"
                      .control-group
                        = f.label :password, "Sua senha"
                        = f.password_field :password , :class => "span3"
                      - if false and devise_mapping.rememberable? 
                        %div
                          = f.check_box :remember_me
                          = f.label :remember_me 
                          
                      %div(style='float: right')
                        = render "users/shared/links" 

                      .control-group
                        = f.submit "Acessar", :class => "btn btn-primary"
          = render "users/registrations/new" 


          
  
